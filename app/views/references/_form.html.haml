-# form to create a new reference shown on the index page
-# frozen_string_literal: true
= simple_form_for(@reference) do |f|
  .form-inputs
    = f.input :author
    = f.input :content
    = f.input :publication_year
    = f.association :slipboxes, input_html: { class: 'select2' }

  .form-actions
    = f.button :submit, class: 'btn btn-outline-primary'
    