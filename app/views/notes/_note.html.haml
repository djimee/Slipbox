-# partial for a note, using in the tree show page
.noteWrapper{id: "note-#{note.id}"}
  %h3= link_to note.title, notes_path(note)

  -# check if note has a description, if not don't display description
  - if !note.content.empty?
    %p Unique ID: #{note.unique_identifier}
    %p Content: #{note.content}
  
  -# show date and time in d/m/y-time - this is in UTC by default
  %p Last edited - #{note.updated_at.strftime("%d/%m/%y-%I:%M%P")}
  %p= link_to 'Edit', edit_note_path(note)
  %p= link_to 'Delete', note, method: :delete, data: { confirm: 'Are you sure?' }
  
